{
  "name": "chanson.live",
  "version": "1.0.0",
  "description": "A WebRTC radio, made using Remix + React.",
  "main": "server/index.ts",
  "repository": "git@github.com:obviyus/radio.git",
  "author": "Ayaan Zaidi <hi@obviy.us>",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-p \"build:*\"",
    "build:remix": "remix build",
    "build:server": "tsc -p tsconfig.server.json",
    "start:core": "cross-env NODE_ENV=production node dist/core.server.js",
    "dev": "run-s dev:remix",
    "dev:remix": "remix dev -c \"npm run dev:node\" --manual",
    "dev:node": "cross-env NODE_ENV=development nodemon --exec 'ts-node ./core.server.ts'  --watch ./core.server.ts",
    "clean": "shx rm -rf node_modules dist build public/build"
  },
  "dependencies": {
    "@remix-run/css-bundle": "^2.1.0",
    "@remix-run/express": "^2.1.0",
    "@remix-run/node": "^2.1.0",
    "@remix-run/react": "^2.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "isbot": "^3.7.0",
    "mediasoup": "^3.12.15",
    "mediasoup-client": "^3.6.101",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.1",
    "@remix-run/dev": "^2.1.0",
    "@swc/core": "^1.3.78",
    "@types/compression": "^1.7.4",
    "@types/node": "^18.18.6",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "remix-development-tools": "^3.2.2",
    "shx": "^0.3.4",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "~18"
  }
}
