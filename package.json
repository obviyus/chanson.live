{
  "name": "localhost_fm",
  "version": "1.0.0",
  "description": "A WebRTC radio, made using Remix + React.",
  "main": "server/index.ts",
  "repository": "git@github.com:obviyus/radio.git",
  "author": "Ayaan Zaidi <hi@obviy.us>",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:remix": "remix build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node16 --outfile=dist/server/index.js",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development ts-node ./server/index.ts",
    "dev:build": "cross-env NODE_ENV=development yarn run build:server --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "cross-env NODE_ENV=production ts-node --transpile-only server/index.ts"
  },
  "dependencies": {
    "@remix-run/express": "^1.10.1",
    "@remix-run/node": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "mediasoup": "^3.11.5",
    "mediasoup-client": "^3.6.70",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.10.1",
    "@types/compression": "^1.7.2",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.17.2",
    "eslint": "^8.32.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "xo": "^0.53.1"
  },
  "engines": {
    "node": ">=16, <17"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "new-cap": 0,
      "n/extension": 0,
      "import/extensions": 0
    }
  }
}
